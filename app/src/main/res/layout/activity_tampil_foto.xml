<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TampilFotoActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:theme="?attr/actionBarTheme"
        android:elevation="4dp"
        app:subtitleTextColor="@color/colorPrimaryDark"
        app:titleTextColor="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/CustomToolbarStyle"
        app:title="Dokumentasi"
        android:alpha="0.85"
        />

    <ImageView
        android:layout_centerInParent="true"
        android:background="@color/colorDarkgrey"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="foto"
        android:scaleType="fitCenter"
        android:layout_below="@id/toolbar"/>

    <ImageView
        android:id="@+id/floatingImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|end"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="18dp"
        android:contentDescription="logo"
        android:src="@mipmap/ic_launcher"
        android:alpha="0.65"/>

    <TextView
        android:text="DPUPRPKP Kota Malang 2024"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center|center_horizontal"
        android:textColor="@color/white"
        android:textStyle="italic"

        android:textSize="11sp"
        android:alpha="0.7"
        android:layout_toStartOf="@+id/floatingImageView"

        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
